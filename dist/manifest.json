{
  "name": "Twitch Gold Digger",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "A little Chrome extension to automate claiming channel point for maximum profit",
  "author": "hello@yujinelson.com",
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_title": "Twitch Gold Digger",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "128": "images/logo128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "exclude_globs": ["*://*.twitch.tv/"],
      "run_at": "document_idle",
      "js": ["pointsObserver.js"]
    }
  ],
  "permissions": ["activeTab", "declarativeContent"]
}
